<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	
	<%- include('./partials/headerLogueado') %> 

	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%= dataUsuario.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					
					<h1 class="main-title">
						<%= dataUsuario.usuario%> 
					

						<a href="/user/profile/edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>

					
				</div>

			 <h4 class="datos-profile"><%= dataUsuario.email%> </h4> 
				<div class="datos-profile">
					<ul class="">
						<li><%= dataUsuario.cantidadDeProducto%> productos </li>
						<li><%= dataUsuario.seguidores%> seguidores </li>
						<li><%= dataUsuario.comentarios%> comentarios </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Mis productos</h1>
			</div>


			<!-- Show mis productos -->

			<% for (let i=0; i<dataProducto.length; i++) { %> 
				
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a class="hipervinculo" href="/product">
						<figure class="product-box_image">
							<img src= "<%= dataProducto[i].imagen %>" alt="cafetera moulinex">
						</figure>
						<article class="product-box_data">
							<h2><%= dataProducto[i].nombre %> </h2>
							<p><%= dataProducto[i].descripcion %></p>
							<p><%= dataProducto[i].fechaDeCarga %></p>
						</article>
					</a>
				</section>
			</div>

			<% }  %> 

		</div>
	</div>
	<!-- /Mis productos -->


		<!-- footer -->
	
		<%- include('./partials/footer') %> 

		<!-- /footer -->
</body>	
</html>