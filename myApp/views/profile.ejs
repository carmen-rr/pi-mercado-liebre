<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %>

<body>
	<!-- Header -->
	

	<% if (locals.user != undefined) { %>
		
		<%- include('./partials/headerLogueado')%> 
<% } else { %>
		<%- include('./partials/headerNot')%> 
<% } %> 


	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= perfil.fotoDePerfil %>" alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">

					
					<h1 class="main-title" >
                        <%= perfil.usuario%>
						
					
 <!--hipervinculo HAY QUE COMPLETAR LA RUTA / dataUsuario[i].id "VER QUE VA EN DATAUSUARIO -->
						<a href="/user/profile/edit/<%= perfil.id %>"> 
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>

					
				</div>

			 <h4 class="datos-profile"><%= perfil.email%> </h4> 
				<div class="datos-profile">
					<ul class="">
						
						<li> seguidores </li>
						<li> comentarios </li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Mis productos</h1>
			</div>


			<!-- Show mis productos -->

			<% for(let i = 0; i<4; i++){ %>
				
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a class="hipervinculo" href="/product">
						<figure class="product-box_image">
							<img src= "<%= //usuario.productoUsuario[i]imagen%>" alt="producto">
						</figure>
						<article class="product-box_data">
							<h2><%=//usuario.productoUsuario[i].nombre%> </h2>
							<p><%= //usuario.productoUsuario[i].descripcion %></p>
							<p><%= //usuario.productoUsuario[i].createdAt %></p>
						</article>
					</a>
				</section>
			</div>

			<% }  %> 
	
		</div>
	</div>
	<!-- /Mis productos -->


		<!-- footer -->
	
		<%- include('./partials/footer') %> 

		<!-- /footer -->
</body>	
</html>