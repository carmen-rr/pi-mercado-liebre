<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head')%> 

<body>

	<% if (locals.user != undefined) { %>
		
		<%- include('./partials/headerLogueado')%> 
<% } else { %>
		<%- include('./partials/headerNot')%> 
<% } %> 
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/products/halloweenbanner7.jpg" alt="Banner en index">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Novedades</h1>
			</div>
			<!-- Show the "ultimos" products -->

			<% for(let i=0; i<4; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a class= "hipervinculo" href="/product/detalle/<%= productos[i].id %>">
							<figure class="product-box_image">
								<img src='/images/products/<%= productos[i].imagen %>' alt="producto">
							</figure>
							<article class="product-box_data">
								<a href="/product/detalle/<%= productos[i].id %>"><h2><%= productos[i].nombre %></h2></a> 
								<p><%= productos[i].descripcion %></p>
								<p><%= productos[i].updatedAt %></p>
							</article>
						</a>
					</section>
				</div>
			<% } %> 

		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h1 class="products-title">Más comentados</h1>
			</div>
			<!-- Show the "ultimos" products -->
			
			<% for(let i=4; i<8; i++) { %>

			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a class= "hipervinculo" href="/product/detalle/<%= productos[i].id %>">
						<figure class="product-box_image">
							<img src='/images/products/<%= productos[i].imagen %>' alt="producto">
						</figure>
						<article class="product-box_data">
							<a href="/product/detalle/<%= productos[i].id %>"><h2><%= productos[i].nombre %></h2></a> 
							<a href="/product/detalle/<%= productos[i].id %>"><p><%= productos[i].descripcion %></p></a> 
							<p><%= productos[i].createdAt %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %> 


		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	
	<%- include('./partials/footer') %> 

	<!-- /footer -->
</body>	
</html>